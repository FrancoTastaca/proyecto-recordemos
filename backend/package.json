{
  "name": "recuerdame-backend",
  "version": "1.0.0",
  "description": "Sistema de recordatorios de medicamentos - API REST",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "seed": "sequelize db:seed:all",
    "db:reset": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all"
  },
  "keywords": [
    "medication",
    "reminder",
    "healthcare",
    "nodejs",
    "express",
    "mysql",
    "api"
  ],
  "author": "Tu Nombre <tu-email@ejemplo.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "body-parser": "^1.20.2",
    "mysql2": "^3.10.1",
    "sequelize": "^6.37.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.12.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.4.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.9",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/proyecto-recuerdame.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/proyecto-recuerdame/issues"
  },
  "homepage": "https://github.com/tu-usuario/proyecto-recuerdame#readme"
}
