# =====================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - BACKEND
# =====================================================
# Copia este archivo como .env y completa los valores requeridos

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
PORT=3000
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=recuerdame_db
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_mysql

# Para testing (opcional)
DB_TEST_NAME=recuerdame_test_db

# =====================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# =====================================================
# Genera un secret seguro: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu_jwt_secret_super_seguro_de_32_caracteres_minimo
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# CONFIGURACIÓN DE CORS
# =====================================================
# URL del frontend para desarrollo local
RUTA_FRONT=http://localhost:8081

# URLs adicionales permitidas (separadas por comas)
# ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# =====================================================
# CONFIGURACIÓN DE GOOGLE DRIVE
# =====================================================
# Ruta al archivo JSON de credenciales de Google Drive API
GOOGLE_DRIVE_CREDENTIALS=./config/google-drive-credentials.json
GOOGLE_DRIVE_FOLDER_ID=tu_folder_id_de_google_drive

# =====================================================
# CONFIGURACIÓN DE NOTIFICACIONES PUSH
# =====================================================
# Configuración para Expo Push Notifications
EXPO_ACCESS_TOKEN=tu_expo_access_token

# =====================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# =====================================================
# Si implementas notificaciones por email
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS Y UPLOADS
# =====================================================
# Tamaño máximo de archivos en MB
MAX_FILE_SIZE=10
UPLOAD_PATH=./uploads

# =====================================================
# CONFIGURACIÓN DE LOGGING
# =====================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =====================================================
# CONFIGURACIÓN DE RATE LIMITING
# =====================================================
# Límite de requests por ventana de tiempo
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE DESARROLLO/DEBUG
# =====================================================
# Activar logs de desarrollo
DEBUG=true

# Activar logging de SQL queries (desarrollo)
DB_LOGGING=false

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================
# Secret para cookies de sesión
SESSION_SECRET=otro_secret_para_sesiones

# Configuración de HTTPS (producción)
# SSL_CERT_PATH=./certs/cert.pem
# SSL_KEY_PATH=./certs/key.pem

# =====================================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# =====================================================
# Si implementas cache con Redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=tu_redis_password

# =====================================================
# CONFIGURACIÓN DE APIS EXTERNAS
# =====================================================
# APIs de medicamentos o servicios médicos
# EXTERNAL_API_KEY=tu_api_key
# EXTERNAL_API_URL=https://api.ejemplo.com

# =====================================================
# CONFIGURACIÓN DE MONITOREO
# =====================================================
# Para servicios como Sentry, New Relic, etc.
# SENTRY_DSN=tu_sentry_dsn
# NEW_RELIC_LICENSE_KEY=tu_new_relic_key